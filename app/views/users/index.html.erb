<h1>Usuarios</h1>

<%= link_to 'Crear nuevo usuario', new_user_path %>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Ver', user_path(user) %> |
          <%= link_to 'Editar', edit_user_path(user) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
