<h1>Mensajes</h1>

<%= link_to 'Crear nuevo mensaje', new_message_path %>

<table>
  <thead>
    <tr>
      <th>Chat</th>
      <th>Usuario</th>
      <th>Contenido</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |msg| %>
      <tr>
        <td>
          <%= "Chat entre #{msg.chat.sender.first_name} y #{msg.chat.receiver.first_name}" %>
        </td>
        <td>
          <%= "#{msg.user.first_name} #{msg.user.last_name}" %>
        </td>
        <td><%= msg.body %></td>
        <td><%= link_to 'Ver', message_path(msg) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

